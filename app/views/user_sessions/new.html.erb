<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="w-full bg-gray-100 rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">Log in to your account</h1>

              <%= form_with model: @user, url: user_sessions_path do |f| %>
              <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
                <div class="mb-6">
                  <%= f.label :username, class:"block text-sm mb-2 font-medium text-gray-900" %>
                  <%= f.text_field :username, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
                </div>

                <div class="mb-6">
                  <%= f.label :password, class:"block text-sm mb-2 font-medium text-gray-900" %>
                  <%= f.password_field :password, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
                </div>
  
                <p class="mb-6">
                  <%= f.submit 'Login', class:"flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
                </p>

                <p class="text-sm font-light text-gray-500">
                      Donâ€™t have an account yet? 
                      <%= link_to 'Sign up', new_user_path, class:"font-medium text-indigo-500 no-underline hover:underline" %>
                </p>
              </div>
              <% end %>
          </div>
      </div>
</div>