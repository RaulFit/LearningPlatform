<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="w-full bg-gray-100 rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <%= form_for [ @course, @enrolment ] do |f| %>
              <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl"><%= "#{t :enrol_to} #{@course.title}" %>?</h1>
              <% if @enrolment.errors.any? %>
                <div class="mb-6">
                  <ul>
                    <% @enrolment.errors.full_messages.each do |message| %>
                    <li>
                    <%= message %>
                    </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
                <%= f.text_field :user_id, type: "hidden", value: current_user&.id %>
                <%= f.text_field :course_id, type: "hidden", value: @course.id %>
                <%= f.text_field :progress, type: "hidden", value: 0 %>
                <%= f.submit "#{t :enrol}", class:"flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm
                 hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
              </div>
              <% end %>
          </div>
      </div>
</div>