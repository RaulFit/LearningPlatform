<%= render 'pages/navbar' %>

<div class="flex flex-col lg:flex-row items-center justify-center py-8 mx-auto md:h-screen lg:py-0">
  <div class="w-full h-2/3 bg-gray-100 rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 max-h-[90vh] overflow-auto flex items-center">
    <div class="p-6 space-y-4 md:space-y-6 sm:p-8 w-full">
      <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
        <%= t :create_account %>
      </h1>

      <%= form_with model: @user do |f| %>
        <% if @user.errors.any? %>
          <div class="mb-6">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
          <div class="mb-6">
            <%= f.label :username, class:"block text-sm mb-2 font-medium text-gray-900" %>
            <%= f.text_field :username, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
          </div>
          <div class="mb-6">
            <%= f.label :email, class:"block text-sm mb-2 font-medium text-gray-900" %>
            <%= f.email_field :email, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
          </div>
          <div class="mb-6">
            <%= f.label :password, class:"block text-sm mb-2 font-medium text-gray-900" %>
            <%= f.password_field :password, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
          </div>
          <div class="mb-6">
            <%= f.label :password_confirmation, class:"block text-sm mb-2 font-medium text-gray-900" %>
            <%= f.password_field :password_confirmation, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
          </div>
          <p class="mb-6">
            <%= f.submit "#{t :sign_up}", class:"flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </p>
        </div>
        <p class="text-sm font-light text-gray-500">
            <%= t :already_have_acc %>
            <%= link_to "#{t :log_in}", new_user_session_path, class:"font-medium text-indigo-500 no-underline hover:underline" %>
          </p>
      <% end %>
    </div>
  </div>

  <div class="lg:flex lg:w-1/2 items-center justify-center min-h-screen">
    <div class="w-full bg-indigo-100 flex items-center justify-center">
      <img src="https://storage.googleapis.com/devitary-image-host.appspot.com/15848031292911696601-undraw_designer_life_w96d.svg"
           class="object-contain h-full w-5/6 p-8">
    </div>
  </div>
</div>
