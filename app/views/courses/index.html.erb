<%= render 'pages/navbar' %>

<div class="flex flex-col p-5 lg:px-48 -mt-71">
  <% if @available %>
    <% if @available_courses.blank? %>
      <%= render 'pages/empty' %>
    <% else %>
      <%= form_with(url: courses_path(available: true), method: 'get') do %>
      <div class="relative">
        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
        </div>
        <%= text_field_tag :search, params[:search], class: "w-1/3 p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500", placeholder: "Search Courses..."%>
        <%= hidden_field_tag :available, true %>
        <%= submit_tag "Search", class:"text-white end-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2" %>
      </div>
      <% end %>
      <% @available_courses.each do |course| %>
        <div class="bg-gray-100 p-5 mt-10 rounded-lg w-full">
          <h1 class="font-bold text-2xl mb-2"><%= course.title %></h1>
          <p class="my-3"><%= course.description %></p>
          <%= link_to "#{t :read_more}", course_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
          <%= link_to "#{t :enrol}", new_course_enrolment_path(course), class:"text-white font-semibold bg-indigo-600 hover:bg-indigo-800 p-2 my-1 rounded" %>
        </div>
      <% end %>
    <% end %>
  <% elsif @authored %>
    <% if @authored_courses.blank? %>
      <%= render 'pages/empty' %>
    <% end %>
    <% @authored_courses.each do |course| %>
      <div class="bg-gray-100 p-5 mt-10 rounded-lg">
        <h1 class="font-bold text-2xl mb-2"><%= course.title %></h1>
        <p class="my-3"><%= course.description %></p>
        <% if course.photo.representable? %>
          <%= image_tag course.photo.representation(resize_to_limit: [100, 100]) %>
        <% end %>
        <%= link_to "#{t :read_more}", course_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
        <%= link_to "#{t :add_lesson}",  new_course_lesson_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
        <%= link_to "#{t :reorder_lessons}", course_lessons_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
        <%= link_to "#{t :edit}", edit_course_path(course), class:"text-white font-semibold bg-indigo-600 hover:bg-indigo-800 p-2 my-1 rounded" %>
      </div>
    <% end %>
  <% elsif @enroled %>
    <% if @enroled_courses.blank? %>
      <%= render 'pages/empty' %>
    <% end %>
    <% @enroled_courses.each do |course| %>
      <div class="bg-gray-100 p-5 mt-10 rounded-lg">
        <h1 class="font-bold text-2xl mb-2"><%= course.title %></h1>
        <p class="my-3"><%= course.description %></p>
        <%= link_to "#{t :resume}", course_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
        <div class="w-full bg-gray-200 rounded-full dark:bg-gray-700 mt-5">
          <div id = "progressBar" class="bg-indigo-700 text-xs font-medium text-white text-center p-0.5 leading-none rounded-full" style="width: 45%"> 45%</div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
