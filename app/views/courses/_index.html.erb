<div class="flex flex-col p-5 lg:px-48 lg:py-11">
  <% if courses.blank? %>
    <%= render 'pages/empty' %>
    <%= yield -%>
  <% end %>
  <% courses.each do |course| %>
    <div class="bg-gray-100 p-5 mt-10 rounded-lg">
      <h1 class="font-bold text-2xl mb-2"><%= course.title %></h1>
      <p class="my-3"><%= course.description %></p>
      <%= link_to "#{t :resume}", course_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
      <div class="w-full bg-gray-200 rounded-full dark:bg-gray-700 mt-5">
        <div class="bg-indigo-700 text-xs font-medium text-white text-center p-0.5 leading-none rounded-full" style="width: 45%"> 45%</div>
      </div>
    </div>
  <% end %>
</div>
