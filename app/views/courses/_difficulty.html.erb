<% if difficulty.eql? "Easy" %>
    <h1 class="font-bold text-xl mb-2 text-center text-green-600"><%= t :easy%></h6>
<% elsif difficulty.eql? "Medium" %>
    <h1 class="font-bold text-xl mb-2 text-center text-orange-600"><%= t :medium %></h6>
<%elsif difficulty.eql? "Hard" %>
    <h1 class="font-bold text-xl mb-2 text-center text-red-600"><%= t :hard %></h6>
<% end %>