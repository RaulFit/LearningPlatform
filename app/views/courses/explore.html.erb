<%= render "pages/navbar" %>

<div class="flex flex-col p-5 lg:px-48 lg:py-11">
    <% @courses.each do |course| %>
        <div class="bg-gray-100 p-5 mt-10 rounded-lg">
            <h1 class="font-bold text-2xl mb-2"><%= course.title %></h1>
            <p class="my-3"><%= course.description %></p>
            <%= link_to "Read more...", course_path(course), class:"text-white font-semibold bg-gray-600 hover:bg-gray-700 p-2 my-1 rounded" %>
            <%= link_to "Register", new_course_registration_path(course), class:"text-white font-semibold bg-indigo-600 hover:bg-indigo-800 p-2 my-1 rounded" %>
        </div>
    <% end %>
</div>
